<% add_decidim_page_title(t("participatory_processes.new.title", scope: "decidim.admin")) %>
<div class="item_show__header">
  <h2 class="item_show__header-title">
    <%= t("title", scope: "decidim.admin.participatory_processes.new") %>
  </h2>
</div>

<div class="item__edit">
  <div class="item__edit-menu">
  </div>
  <div class="item__edit-form">
    <%= decidim_form_for(@form, html: { class: "form form-defaults new_participatory_process" }) do |f| %>
      <%= render partial: "form", object: f %>
      <div class="form__wrapper-block flex-col-reverse md:flex-row justify-between">
        <%= f.submit t("participatory_processes.new.create", scope: "decidim.admin"), class: "button button__sm md:button__lg button__secondary" %>
      </div>
    <% end %>
  </div>
</div>

