<div class="item_show__header">
  <h2 class="item_show__header-title">
    <%= t("info", scope: "decidim.admin.menu.participatory_processes_submenu") %>
  </h2>
</div>
<div class="item__edit">
  <div class="item__edit-menu">
    <div class="item__edit-menu-sticky">
      <p class="item__edit-menu-title">
        <%= t("sections", scope: "decidim.participatory_processes.admin.participatory_processes.form") %>
      </p>
      <%= link_to t("title", scope: "decidim.participatory_processes.admin.participatory_processes.form"), decidim_admin_participatory_processes.edit_participatory_process_path(current_participatory_space, anchor: t("title", scope: "decidim.participatory_processes.admin.participatory_processes.form")), class: "item__edit-menu-anchor" %>
      <%= link_to t("duration", scope: "decidim.participatory_processes.admin.participatory_processes.form"), decidim_admin_participatory_processes.edit_participatory_process_path(current_participatory_space, anchor: t("duration", scope: "decidim.participatory_processes.admin.participatory_processes.form")), class: "item__edit-menu-anchor" %>
      <%= link_to t("images", scope: "decidim.participatory_processes.admin.participatory_processes.form"), decidim_admin_participatory_processes.edit_participatory_process_path(current_participatory_space, anchor: t("images", scope: "decidim.participatory_processes.admin.participatory_processes.form")), class: "item__edit-menu-anchor" %>
      <%= link_to t("metadata", scope: "decidim.participatory_processes.admin.participatory_processes.form"), decidim_admin_participatory_processes.edit_participatory_process_path(current_participatory_space, anchor: t("metadata", scope: "decidim.participatory_processes.admin.participatory_processes.form")), class: "item__edit-menu-anchor" %>
      <%= link_to t("filters", scope: "decidim.participatory_processes.admin.participatory_processes.form"), decidim_admin_participatory_processes.edit_participatory_process_path(current_participatory_space, anchor: t("filters", scope: "decidim.participatory_processes.admin.participatory_processes.form")), class: "item__edit-menu-anchor" %>
      <%= link_to t("visbility", scope: "decidim.participatory_processes.admin.participatory_processes.form"), decidim_admin_participatory_processes.edit_participatory_process_path(current_participatory_space, anchor: t("visbility", scope: "decidim.participatory_processes.admin.participatory_processes.form")), class: "item__edit-menu-anchor" %>
      <%= link_to t("related_processes", scope: "decidim.participatory_processes.admin.participatory_processes.form"), decidim_admin_participatory_processes.edit_participatory_process_path(current_participatory_space, anchor: t("related_processes", scope: "decidim.participatory_processes.admin.participatory_processes.form")), class: "item__edit-menu-anchor" %>
      <%= link_to t("other", scope: "decidim.participatory_processes.admin.participatory_processes.form"), decidim_admin_participatory_processes.edit_participatory_process_path(current_participatory_space, anchor: t("other", scope: "decidim.participatory_processes.admin.participatory_processes.form")), class: "item__edit-menu-anchor" %>
    </div>
  </div>

  <div class="item__edit-form">
    <%= decidim_form_for(@form, html: { class: "form form-defaults edit_participatory_process" }) do |f| %>
      <%= render partial: "form", object: f %>
      <div class="form__wrapper-block flex-col-reverse md:flex-row justify-between">
        <%= f.submit t("participatory_processes.edit.update", scope: "decidim.admin"), class: "button button__sm md:button__lg button__secondary" %>

        <% if allowed_to? :publish, :process, process: current_participatory_process %>
          <% if current_participatory_process.published? %>
            <%= link_to t("actions.unpublish", scope: "decidim.admin"), participatory_process_publish_path(current_participatory_process), method: :delete, class: "button button__sm md:button__lg button__secondary" %>
          <% else %>
            <%= link_to t("actions.publish", scope: "decidim.admin"), participatory_process_publish_path(current_participatory_process), method: :post, class: "button button__sm md:button__lg button__secondary" %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
