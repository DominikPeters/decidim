<%= decidim_form_for(@form, url: assembly_member_path(@assembly_member.assembly, @assembly_member), html: { class: "form edit_assembly_member" }) do |f| %>
  <%= render partial: "form", object: f, locals: { title: t("assembly_members.edit.title", scope: "decidim.admin") } %>

  <div class="form__wrapper-block flex-col-reverse md:flex-row justify-between">
  <%= f.submit t("assembly_members.edit.update", scope: "decidim.admin"), class: "button button__sm md:button__lg button__secondary" %>
  </div>
<% end %>
