<% add_decidim_page_title(translated_attribute(current_participatory_space.title)) %>
<% content_for :breadcrumb_nav do %>
<div class="process-title">
  <div class="container">
    <div class="process-title-content">
      <div class="process-title-content-breadcrumb-container-left">
        <%= link_to decidim_admin.root_path, class: "process-title-content-icon-home", data: { "external-link": false } do %>
          <%= icon "home-gear-line" %>
        <% end %>
        <span class="text-white">/</span>
        <%= link_to t("decidim.admin.titles.assemblies"), decidim_admin_assemblies.assemblies_path, data: { "external-link": false }, class: "process-title-content-breadcrumb-no-active" %>
        <span class="text-white">/</span>
        <%= link_to translated_attribute(current_participatory_space.title), decidim_assemblies.assembly_path(current_participatory_space), data: { "external-link": false }, class: 'process-title-content-breadcrumb-no-active' %>
        <span class="text-white">/</span>
        <span class="process-title-content-breadcrumb"><%= t("assembly_members.index.assembly_members_title", scope: "decidim.admin") %></span>
      </div>
      <div class="process-title-content-breadcrumb-container-right">
        <%= link_to t("actions.new", scope: "decidim.admin", name: t("models.assembly_member.name", scope: "decidim.admin")), new_assembly_member_path(current_assembly), class: "process-title-content-breadcrumb-container-right-link" %>
        <div class="inline-block relative">
          <%= button_tag id: "assembly-dropdown-menu-trigger", data: { component: 'dropdown', target: 'assembly-dropdown-menu-settings' }, class: 'dropdown__trigger button button__transparent' do %>
            <%= icon "more-line" %>
          <% end %>
          <div id="assembly-dropdown-menu-settings" class="process-title-content-dropdown">
            <%= sidebar_menu(:admin_assembly_menu).render %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

<%= render "layouts/decidim/admin/application" do %>
  <div class="process-content">
    <%= yield %>
  </div>
<% end %>
