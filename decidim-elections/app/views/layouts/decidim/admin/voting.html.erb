<%# content_for :sidebar_menu_nav do %>
  <%#= sidebar_menu(:admin_voting_menu).render do
    public_page_link decidim_votings.voting_path(current_participatory_space)
  end %>
<%# end %>

<% content_for :breadcrumb_nav do %>
<div class="voting-title">
  <div class="container">
    <div class="voting-title-content">
      <div class="process-title-content-breadcrumb-container-left">
        <%= link_to decidim_admin.root_path, class: "process-title-content-icon-home", data: { "external-link": false } do %>
          <%= icon "home-gear-line" %>
        <% end %>
        <span class="text-white">/</span>
        <%= link_to t("decidim.votings.admin.titles.votings"), decidim_admin_votings.votings_path, data: { "external-link": false }, class: "process-title-content-breadcrumb-no-active" %>
        <span class="text-white">/</span>
        <%= link_to translated_attribute(current_participatory_space.title), decidim_admin_votings.edit_voting_path(current_participatory_space), data: { "external-link": false }, class: 'process-title-content-breadcrumb' %>
      </div>
    </div>
  </div>
</div>
<% end %>

<%= render "layouts/decidim/admin/application" do %>
  <div class="voting-content">
    <% if !current_participatory_space.elections.any? %>
      <%= cell("decidim/announcement", t("votings.edit.add_election_component", scope: "decidim.votings.admin"), callout_class: "alert") %>
    <% end %>
    <% if current_participatory_space.polling_stations_with_missing_officers? %>
      <%= cell("decidim/announcement", t("votings.edit.assign_missing_officers", scope: "decidim.votings.admin"), callout_class: "alert") %>
    <% end %>
    <%= yield %>
  </div>
<% end %>
