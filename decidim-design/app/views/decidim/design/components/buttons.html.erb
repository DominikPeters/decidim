    rows << { class: "button__transparent-secondary" }
    rows << { class: "button__transparent-tertiary" }

    rows.each do |row|
  %>
    <button class="mt-4 block button button__lg <%= row[:class] %>"><code>.button.button__lg.<%= row[:class] %></code></button>
  <% end %>

  <p class="my-4 text-gray-2">In case of a darker background:</p>

  <div class="bg-primary p-4 rounded">
    <button class="block ml-auto button button__lg button__transparent"><code>.button.button__lg.button__transparent</code></button>
  </div>
</section>

