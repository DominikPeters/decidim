<% content_for :heading do %>
  Buttons
<% end %>

<% content_for :description do %>
  Buttons are built using different combinations of CSS classes: the <code>button</code> class, a size and a color.
<% end %>

<% content_for :toc do %>
  <a href="#sizes">Sizes</a>
  <a href="#colors">Colors</a>
  <a href="#transparent">Transparent</a>
  <a href="#combinations">Text</a>
  <a href="#disabled">Disabled</a>
<% end %>

<section id="sizes">
  <h2 class="text-3xl font-semibold">Sizes</h2>

  <%
    rows = []
    rows << { class: "button__xs" }
    rows << { class: "button__sm" }
    rows << { class: "button__lg" }
    rows << { class: "button__xl" }

    rows.each do |row|
  %>
    <button class="mt-4 block button button__primary <%= row[:class] %>"><code>.button.button__primary.<%= row[:class] %></code></button>
  <% end %>
</section>

