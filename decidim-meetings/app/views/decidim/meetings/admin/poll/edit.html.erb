<%= decidim_form_for(@form, url: update_url, method: :put, html: { class: "form edit_questionnaire" }) do |form| %>
  <%= render partial: "decidim/meetings/admin/poll/form", object: form %>

  <% if questionnaire.questions_editable? %>
    <div class="form__wrapper-block flex-col-reverse md:flex-row justify-between">
      <%= form.submit t("save", scope: "decidim.forms.admin.questionnaires.edit"), class: "button button__sm md:button__lg button__secondary" %>
    </div>
  <% end %>
<% end %>
