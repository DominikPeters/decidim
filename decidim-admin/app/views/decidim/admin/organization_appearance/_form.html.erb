<div class="form__wrapper">
  <div class="card" data-component="accordion" id="accordion-<%= t("homepage_appearance_title", scope: "decidim.admin.organization_appearance.form") %>">
    <div class="card-divider">
      <button class="card-divider-button" data-open="true" data-controls="panel-<%= t("homepage_appearance_title", scope: "decidim.admin.organization_appearance.form") %>" type="button">
        <%= icon "arrow-right-s-line" %>
        <h2 class="card-title" id="accordion-<%= t("homepage_appearance_title", scope: "decidim.admin.organization_appearance.form") %>">
          <%= t("homepage_appearance_title", scope: "decidim.admin.organization_appearance.form") %>
        </h2>
      </button>
    </div>
    <div id="panel-<%= t("homepage_appearance_title", scope: "decidim.admin.organization_appearance.form") %>" class="card-section">
      <div class="row column">
        <%= form.translated :editor, :description %>
      </div>

      <div class="row">
        <div class="columns xlarge-6 slug">
          <%= form.text_field :cta_button_path %>
          <p class="help-text"><%== t(".cta_button_path_help", url: decidim_form_slug_url("", form.object.cta_button_path)) %></p>
        </div>

        <div class="columns xlarge-6">
          <%= form.translated :text_field, :cta_button_text %>
          <p class="help-text"><%= t(".cta_button_text_help") %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="card" data-component="accordion" id="accordion-<%= t("homepage_highlighted_content_banner_title", scope: "decidim.admin.organization_appearance.form") %>">
    <div class="card-divider">
      <button class="card-divider-button" data-open="true" data-controls="panel-<%= t("homepage_highlighted_content_banner_title", scope: "decidim.admin.organization_appearance.form") %>" type="button">
        <%= icon "arrow-right-s-line" %>
        <h2 class="card-title" id="accordion-<%= t("homepage_highlighted_content_banner_title", scope: "decidim.admin.organization_appearance.form") %>">
          <%= t("homepage_highlighted_content_banner_title", scope: "decidim.admin.organization_appearance.form") %>
        </h2>
      </button>
    </div>
    <div id="panel-<%= t("homepage_highlighted_content_banner_title", scope: "decidim.admin.organization_appearance.form") %>" class="card-section">
      <div class="row column">
        <%= form.check_box :highlighted_content_banner_enabled %>
      </div>

      <div class="row column">
        <%= form.translated :text_area, :highlighted_content_banner_title %>
      </div>

      <div class="row column">
        <%= form.translated :editor, :highlighted_content_banner_short_description %>
      </div>

      <div class="row column">
        <%= form.translated :text_area, :highlighted_content_banner_action_title %>
      </div>

      <div class="row column">
        <%= form.translated :text_area, :highlighted_content_banner_action_subtitle %>
      </div>

      <div class="row column">
        <%= form.url_field :highlighted_content_banner_action_url %>
      </div>

      <div class="row">
        <div class="columns xlarge-6">
          <%= form.upload :highlighted_content_banner_image, button_class: "button button__sm button__transparent-secondary" %>
        </div>
      </div>
    </div>
  </div>

  <div class="card" data-component="accordion" id="accordion-<%= t("omnipresent_banner_appearance_title", scope: "decidim.admin.organization_appearance.form") %>">
    <div class="card-divider">
      <button class="card-divider-button" data-open="true" data-controls="panel-<%= t("omnipresent_banner_appearance_title", scope: "decidim.admin.organization_appearance.form") %>" type="button">
        <%= icon "arrow-right-s-line" %>
        <h2 class="card-title" id="<%= t("omnipresent_banner_appearance_title", scope: "decidim.admin.organization_appearance.form") %>">
          <%= t("omnipresent_banner_appearance_title", scope: "decidim.admin.organization_appearance.form") %>
        </h2>
      </button>
    </div>
    <div id="panel-<%= t("omnipresent_banner_appearance_title", scope: "decidim.admin.organization_appearance.form") %>" class="card-section">
      <div class="row column">
        <%= form.check_box :enable_omnipresent_banner %>
      </div>

      <div class="row column">
        <%= form.translated :text_field, :omnipresent_banner_title %>
      </div>

      <div class="row column">
        <%= form.translated :text_field, :omnipresent_banner_short_description %>
      </div>

      <div class="row column">
        <%= form.url_field :omnipresent_banner_url %>
      </div>
    </div>
  </div>
  <%= render partial: "decidim/admin/organization_appearance/form/images", locals: { form: } %>
  <%= render partial: "decidim/admin/organization_appearance/form/colors", locals: { form: } %>
</div>

