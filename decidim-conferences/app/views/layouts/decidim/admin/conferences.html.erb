<% content_for :breadcrumb_nav do %>
  <div class="process-title">
    <div class="process-title-content">
      <div class="process-title-content-breadcrumb-container-left">
        <%= link_to decidim_admin.root_path, class: "process-title-content-icon-home", data: { "external-link": false } do %>
          <%= icon "home-gear-line" %>
        <% end %>
        <span class="text-white">/</span>
        <%= link_to t("decidim.admin.titles.conferences"), decidim_admin_conferences.conferences_path, data: { "external-link": false }, class: "process-title-content-breadcrumb" %>
      </div>
      <div class="process-title-content-breadcrumb-container-right">
        <% if allowed_to? :create, :conference %>
          <%= link_to new_conference_path, class: "process-title-content-breadcrumb-container-right-link" do %>
            <%= icon "add-line", class: "w-4 h-4" %>
            <span>
              <%= t("actions.new_conference", scope: "decidim.admin") %>
            </span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= render "layouts/decidim/admin/application" do %>

  <div class="process-content">
    <%= yield %>
  </div>
<% end %>
