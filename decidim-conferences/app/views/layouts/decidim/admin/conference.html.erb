<% content_for :breadcrumb_nav do %>
  <div class="process-title">
    <div class="process-title-content">
      <div class="process-title-content-breadcrumb-container-left">
        <%= link_to decidim_admin.root_path, class: "process-title-content-icon-home", data: { "external-link": false } do %>
          <%= icon "home-gear-line" %>
        <% end %>
        <span class="text-white">/</span>
        <%= link_to t("decidim.admin.titles.conferences"), decidim_admin_conferences.conferences_path, data: { "external-link": false }, class: "process-title-content-breadcrumb-no-active font-normal" %>
        <span class="text-white">/</span>
        <%= link_to translated_attribute(current_participatory_space.title), decidim_conferences.conference_path(current_participatory_space), data: { "external-link": false }, class: 'process-title-content-breadcrumb' %>
      </div>
      <div class="process-title-content-breadcrumb-container-right">
        <%= link_to decidim_conferences.conference_path(current_participatory_space), class: "process-title-content-breadcrumb-container-right-link" do %>
          <svg viewBox="0 0 24 24" id="ri-eye-line">
            <path fill="none" d="M0 0h24v24H0z"/>
            <path d="M12 3c5.392 0 9.878 3.88 10.819 9-.94 5.12-5.427 9-10.819 9-5.392 0-9.878-3.88-10.819-9C2.121 6.88 6.608 3 12 3zm0 16a9.005 9.005 0 0 0 8.777-7 9.005 9.005 0 0 0-17.554 0A9.005 9.005 0 0 0 12 19zm0-2.5a4.5 4.5 0 1 1 0-9 4.5 4.5 0 0 1 0 9zm0-2a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5z"/>
          </svg>
          <span>
            <%= t("see_assembly", scope: "decidim.admin.menu.assemblies_submenu") %>
          </span>
        <% end %>
        <div class="inline-block relative">
          <%= button_tag id: "assembly-dropdown-menu-trigger", data: { component: 'dropdown', target: 'assembly-dropdown-menu-settings' }, class: 'dropdown__trigger button button__transparent' do %>
            <svg viewBox="0 0 24 24" id="ri-more-line">
              <g>
                  <path fill="none" d="M0 0h24v24H0z"/>
                  <path d="M4.5 10.5c-.825 0-1.5.675-1.5 1.5s.675 1.5 1.5 1.5S6 12.825 6 12s-.675-1.5-1.5-1.5zm15 0c-.825 0-1.5.675-1.5 1.5s.675 1.5 1.5 1.5S21 12.825 21 12s-.675-1.5-1.5-1.5zm-7.5 0c-.825 0-1.5.675-1.5 1.5s.675 1.5 1.5 1.5 1.5-.675 1.5-1.5-.675-1.5-1.5-1.5z"/>
              </g>
            </svg>
          <% end %>
          <div id="assembly-dropdown-menu-settings" class="process-title-content-dropdown">
            <%= sidebar_menu(:conferences_admin_menu).render %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= render "layouts/decidim/admin/application" do %>
  <div class="process-content">
    <%= yield %>
  </div>
<% end %>
