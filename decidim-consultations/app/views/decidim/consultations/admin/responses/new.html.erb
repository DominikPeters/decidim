<h2 class="questions-title-summary">
  <%= t "responses.new.title", scope: "decidim.admin" %>
</h2>

<%= decidim_form_for @form,
                     url: responses_path(current_question),
                     html: { class: "form new_response" } do |f| %>
  <%= render partial: "form", object: f %>

  <div class="form__wrapper-block flex-col-reverse md:flex-row justify-between">
    <%= f.submit t("responses.new.create", scope: "decidim.admin"), data: { disable_with: true }, class: "button button__sm md:button__lg button__secondary" %>
  </div>
<% end %>
